<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tool="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <android.support.v7.widget.Toolbar
            android:id="@+id/news_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPink_e83f9c"
            android:minHeight="?attr/actionBarSize">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize">


            <ImageView
                    android:id="@+id/im_back_toobar"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:maxHeight="?attr/actionBarSize"
                    android:maxWidth="?attr/actionBarSize"
                    android:src="@drawable/toolbar_ic_back"/>

            <TextView
                    android:id="@+id/tv_tittle"
                    style="@style/TextAppearance.AppCompat.Subhead"
                    android:layout_width="wrap_content"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="@string/tittle_news"
                    android:textColor="@color/colorWhite_ffffff"
                    android:textSize="20sp"/>
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>


    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:scrollbars="none">

        <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="4dp">


                <TextView
                        android:id="@+id/tv_tittle_newsInnfo_activity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:gravity="center"
                        android:textColor="@color/colorBlake_101010"
                        android:textSize="24sp"
                        tool:text="恋爱中论啪啪啪的正确姿势"/>

                <TextView
                        android:id="@+id/tv_time_newsInfo_activity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:gravity="center"
                        android:textSize="15sp"
                        tool:text="2014211448"/>

                <TextView
                        android:id="@+id/tv_contant_newsInfo_activity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="18sp"
                        tool:text="     恋爱中论啪啪啪的正确姿势"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>
    </ScrollView>
</LinearLayout>
