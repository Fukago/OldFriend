<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorGray_FFE0E6E6"
        android:fitsSystemWindows="true"
        android:orientation="vertical"
        tools:context="com.example.apple.oldfriend.view.SendZoneActivity">

    <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize">

            <TextView
                    android:id="@+id/tv_tittle_toolbar_cancel"
                    style="@style/TextAppearance.AppCompat.Subhead"
                    android:layout_width="wrap_content"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_alignParentLeft="true"
                    android:gravity="center"
                    android:text="@string/tittle_cancel"
                    android:textColor="@color/colorWhite_ffffff"
                    android:textSize="18sp"/>

            <TextView
                    android:id="@+id/tv_tittle_toolbar"
                    style="@style/TextAppearance.AppCompat.Subhead"
                    android:layout_width="wrap_content"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="@string/tittle_sendzone"
                    android:textColor="@color/colorWhite_ffffff"
                    android:textSize="20sp"/>

            <Button
                    android:id="@+id/bn_tittle_toolbar_send"
                    android:layout_width="wrap_content"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_alignParentRight="true"
                    android:clickable="false"
                    android:gravity="center"
                    android:text="@string/tittle_send"
                    android:background="@color/colorPink_e83f9c"
                    android:textColor="@color/colorGray_a9b7b7"
                    android:textSize="18sp"/>
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite_ffffff"
            android:orientation="vertical">

        <EditText
                android:id="@+id/et_send_zone"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/sharp_editext"
                android:gravity="start"
                />

        <ImageView
                android:id="@+id/im_addpicture_send_zone"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_margin="12dp"

                android:src="@drawable/activity_sendzone_addpicture"/>
    </LinearLayout>

</LinearLayout>
