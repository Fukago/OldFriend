<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#E53D99"
        android:paddingLeft="5dp">

        <Button
            android:id="@+id/bt_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:background="@drawable/back"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="注册"
            android:textColor="#FFFFFF"
            android:textSize="26sp"/>
    </RelativeLayout>

    <AbsoluteLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/et_phonenum"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_x="40dp"
            android:layout_y="30dp"
            android:background="@drawable/bg_border"
            android:hint="手机号"
            />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_x="40dp"
            android:layout_y="110dp"
            android:background="@drawable/bg_border"
            android:hint="密码"
            android:password="true"/>

        <EditText
            android:id="@+id/et_identify"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_x="40dp"
            android:layout_y="190dp"
            android:background="@drawable/bg_border"
            android:hint="验证码"
            />

        <Button
            android:id="@+id/bt_getidentify"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:layout_x="230dp"
            android:layout_y="190dp"
            android:background="#E53D99"
            android:text="发送验证码"
            android:textColor="#FFFFFF"
            android:textSize="18sp"/>

        <RadioGroup
            android:id="@+id/rg_radiogroup"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_x="40dp"
            android:layout_y="260dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/older_user"
                android:layout_width="145dp"
                android:layout_height="40dp"
                android:text="老年用户"
                android:textSize="18sp"
                />

            <RadioButton
                android:id="@+id/older_helper"
                android:layout_width="145dp"
                android:layout_height="40dp"
                android:text="老年看护者"
                android:textSize="18sp"
                />
        </RadioGroup>

        <Button
            android:id="@+id/bt_confirmrig"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_x="40dp"
            android:layout_y="340dp"
            android:background="@drawable/bg_borderpink"
            android:text="确认注册"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            />

        <Button
            android:id="@+id/bt_ansques"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_x="40dp"
            android:layout_y="400dp"
            android:background="@drawable/bg_borderpink"
            android:text="疑问解答"
            android:textColor="#FFFFFF"
            android:textSize="20sp"/>
    </AbsoluteLayout>
</LinearLayout>
